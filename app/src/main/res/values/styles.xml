<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="android:textAppearance">@style/NavigationViewTextAppearance</item>
        <item name="android:itemPadding">8dp</item>
    </style>

    <style name="NavigationViewTextAppearance">
        <item name="android:textSize">12sp</item>
    </style>
</resources>